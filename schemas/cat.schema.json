{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "cat.schema.json",
  "title": "Cat",
  "description": "Cat's infomation",
  "type": "object",
  "required": ["_id", "catName", "catColorCategory", "catSex", "catStatus"],
  "properties": {
    "_id": {
      "type": "string",
      "description": "唯一ID"
    },
    "catName": {
      "type": "string",
      "description": "名字"
    },
    "catNickname": {
      "type": "string",
      "description": "昵称，可选"
    },
    "catColorCategory": {
      "type": "string",
      "enum": ["纯黑", "纯白", "狸花", "奶牛", "橘猫与橘白", "三花", "玳瑁"],
      "description": "毛色分类"
    },
    "catColorDescription": {
      "type": "string",
      "description": "毛色描述，可选"
    },
    "catSex": {
      "type": "string",
      "enum": ["公", "母", "未知"],
      "default": "未知",
      "description": "性别，默认未知"
    },
    "catStatus": {
      "type": "string",
      "enum": ["在野", "已送养", "喵星"],
      "default": "在野",
      "description": "猫咪状态，默认在野"
    },
    "catNeuteringStatus": {
      "type": "string",
      "enum": ["未绝育", "已绝育"],
      "default": "未知",
      "description": "绝育状态，可选"
    },
    "catNeuteringDate": {
      "type": "string",
      "description": "绝育时间，可选"
    },
    "catCharacter": {
      "type": "string",
      "description": "性格，可选"
    },
    "catNameOrigin": {
      "type": "string",
      "description": "名字来源，可选"
    },
    "catLocation": {
      "type": "string",
      "description": "出没地点，可选"
    },
    "catDescriptions": {
      "type": "string",
      "description": "备注"
    }
  }
}
