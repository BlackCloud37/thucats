{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@utils": ["src/utils"]
    }
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules", "dist"]
}
